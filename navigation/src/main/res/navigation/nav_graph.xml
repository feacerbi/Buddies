<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.buddies.splash.ui.SplashScreenFragment"
        android:label="@string/splash_name" >
        <action
            android:id="@+id/action_splashScreenFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.buddies.login.ui.LoginFragment"
        android:label="@string/login_name" >
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.buddies.profile.ui.ProfileFragment"
        android:label="@string/profile_name" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_bottom"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph" />
    </fragment>

</navigation>