<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/location_header">

        <ListPreference
            app:defaultValue="@string/radius_preference_default_value"
            app:entries="@array/radius_entries"
            app:entryValues="@array/radius_values"
            app:key="@string/radius_preference_key"
            app:title="@string/radius_title"
            app:icon="@drawable/ic_baseline_my_location"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/version_header">

        <Preference
            app:key="@string/version_preference_key"
            app:title="1.0.0"/>

    </PreferenceCategory>

</PreferenceScreen>