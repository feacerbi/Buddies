<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/textColorHigh</item>

        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.AppCompat.Light.ActionButton.CloseMode.Secondary</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionMode.Secondary</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Legacy -->
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="Widget.AppCompat.ActionMode.Secondary" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/Widget.AppCompat.ActionMode.Secondary.Title</item>
    </style>

    <style name="Widget.AppCompat.ActionMode.Secondary.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Widget.AppCompat.Light.ActionButton.CloseMode.Secondary"
        parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/colorSecondary</item>
    </style>

</resources>
